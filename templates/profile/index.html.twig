{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <h3 class="alert-{{ label }} ">
                {{ message }}
            </h3>
        {% endfor %}
    {% endfor %}
</div>
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="mt-3 col-md-12 mb-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>{{ app.user.prenom }} {{ app.user.nom }}</h4>
                                    <p class="text-muted font-size-sm">{{ app.user.siteRattachement.nom }}</p>
                                    <a href="{{ url('profile_edit')}}"><button type="button" class="btn btn-primary">Modifier</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mt-3">

                    </div>
                </div>
                <div class="col-md-12 d-flex flex-column  text-center">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h6 class="mb-0">Nom</h6>
                                    {{ app.user.nom }}
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h6 class="mb-0">Prénom</h6>
                                    {{ app.user.prenom }}
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h6 class="mb-0">Email</h6>
                                    {{ app.user.email }}
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h6 class="mb-0">Téléphone</h6>
                                    {{ app.user.telephone }}
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <h6 class="mb-0">Site de rattachement</h6>
                                    {{ app.user.siteRattachement.nom }}
                                </div>
                                <div class="col-sm-9 text-secondary">

                                </div>
                            </div>


{% endblock %}
