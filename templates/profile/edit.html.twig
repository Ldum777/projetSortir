{% extends 'base.html.twig' %}

{% block title %}Modifier son profil{% endblock %}

{% block body %}

<div class="container">
    <div class="main-body">
        <div class="row ">
            <div class="mt-3 col-md-12 mb-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{ app.user.prenom }} {{ app.user.nom }}</h4>
                                <p class="text-muted font-size-sm">{{ app.user.siteRattachement.nom }}</p>
                                <a href="{{ url('profile_display')}}"><button type="button" class="btn btn-primary">Retour</button></a>
                                <hr>
                                {% form_theme  formEdit 'bootstrap_4_layout.html.twig' %}
                                {{ form_start(formEdit)}}
                                {{ form_end(formEdit)}}
                                <hr>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                </div>
            </div>
        </div>
    </div>
</div>

                        {% endblock %}
