{% extends 'base.html.twig' %}
{% block title %}
    Liste des participants
{% endblock %}
{% block body %}
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4 mb-5">Liste des participants</h1>
    </div>
    <div class="container col-12 col-sm-10 col-md-8 col-md-6" style="align-content: center">
        <div class="row justify-content-around">
            {% for user in users %}
                <div class="container col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4 ">
                    <div class="row justify-content-around">
                        <div class="card text-white bg-dark text-center mt-5" style="min-width : 220px">
                            <h3>{{ user.pseudo }}</h3>
                            <div class="card-header text-light bg-dark">
                                <h6> {{ user.nom }}</h6>
                                <h6> {{ user.prenom }}</h6>
                            </div>
                            <div style="align-content: center">
                                <img src="https://www.bootdey.com/img/Content/avatar/avatar2.png" alt="Admin" class="rounded-circle" width="150">
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    </div>
    </div>
    </div>
{% endblock %}
