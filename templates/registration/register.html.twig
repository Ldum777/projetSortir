{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_horizontal_layout.html.twig' %}
{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <h1 style="text-align: center">Inscrire un participant</h1>



    {{ form_start(registrationForm) }}

<div class="row col-12 pt-2 mt-5">
    <div class="container align-items-center col-10 col-sm-8 col-md-6 col-lg-6 col-xl-3">
        <div class="form-group">
            <label for="">Nom:</label>
        {{ form_widget(registrationForm.nom) }}

        </div>

        <div class="form-group">
            <label for="">Prenom:</label>
            {{ form_widget(registrationForm.prenom) }}

        </div>

        <div class="form-group">
            <label for="">Téléphone</label>
            {{ form_widget(registrationForm.telephone) }}

        </div>

        <div class="form-group">
            <label for="">Email:</label>
            {{ form_widget(registrationForm.email) }}

        </div>

        <div class="form-group">
            <label for="">Mot de passe</label>
            {{ form_widget(registrationForm.password) }}

        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col text-center">
                    <button class="btn btn-lg btn-primary col-4 "type="submit">Register</button>
                </div>
            </div>
        </div>
    </div>
</div>
    </div>

        {{ form_end(registrationForm) }}



{% endblock %}






