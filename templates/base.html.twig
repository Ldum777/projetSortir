<!DOCTYPE html>
<html lang="fr">
    <head>


        <meta charset="UTF-8">
        <title>{% block title %}Accueil{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/cerulean/bootstrap.min.css">
        {% endblock %}

        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <img class="logoAccueil" src="{{ asset('build/images/imageIcon.png') }}" alt="ACME logo" width="50"
                 height="50" style="margin-right: 10px">
            <a class="navbar-brand" href="{{ url('home_home') }}">Sortir.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active" >
                        <a class="nav-link" href="{{ url('home_home') }}">Accueil
                            <span class="sr-only">(current)</span>
                        </a>


                    </li>
                    {% if is_granted('ROLE_ADMIN') == true %}

                            <li class="nav-item ml-auto ">
                                <a class="nav-link" href="{{ url('app_register') }}">Inscrire un participant</a>
                            </li>

                    {% endif %}

                    {% if app.user is null %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url('app_login') }}">Se connecter</a>
                    </li>
                    {% else %}
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('sortie_create') }}">Créer une Sortie
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('sortie_liste') }}">Liste des sorties
                                <span class="sr-only">(current)</span>
                            </a>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('sortie_mes_sorties') }}">Mes sorties
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                    </ul>
                    <div  align="right">
                        {% if app.user %}
                            <div class="nav-item " id="navbarColor02" data-target="#navbarColor02"  >
                                <p style="color:#FFFFFF";> Bienvenue {{ app.user.username }}</p>

                            </div>
                        {% endif %}
                    <ul class="navbar-nav mr-auto">

                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('profile_display') }}">Mon profil</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" href="{{ url('app_logout') }}">Se déconnecter</a>
                        </li>
                    </ul>
                    </div>
                    {% endif %}


{#                <form class="form-inline my-2 my-lg-0">#}
{#                    <input class="form-control mr-sm-2" type="text" placeholder="Search">#}
{#                    <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>#}
{#                </form>#}
            </div>
        </nav>

    </header>

    {% block top  %}

    {% endblock %}

        {% block body %}

        {%endblock %}


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>
